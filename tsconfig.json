{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true
    }
}